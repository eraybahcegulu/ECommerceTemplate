@model List<Product>
@{
    ViewData["Title"] = "Motherboards";
}

<div id="products" >
    <div class="bg-dark text-light py-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="@Url.Action("Index", "Shop")" class="text-light text-decoration-none">All Products</a>
                    <a style="margin-left:25px;" href="@Url.Action("GraphicsCard", "Shop")" class="text-light text-decoration-none">Graphics Cards</a>
                    <a style="margin-left:25px;" href="@Url.Action("Processor", "Shop")" class="text-light text-decoration-none">Processors</a>
                    <a style="margin-left:25px;" href="@Url.Action("RAM", "Shop")" class="text-light text-decoration-none">RAM</a>
                    <a style="margin-left:25px;" href="@Url.Action("Motherboard", "Shop")" class="text-light text-decoration-none">Motherboards</a>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div style="margin-top:20px;" class="product-list">
            @foreach (var product in Model)
            {
                <div class="product-item">
                    <img src="@Url.Content(product.ImgUrl)" alt="@product.Name" />
                    <h2 class="mt-3">@product.Name</h2>
                    <p class="mt-3">@product.Features</p>
                    <p id="price">@product.Price₺</p>
                    <div class="text-center">
                        <button class="btn btn-primary mt-3">Sepete Ekle</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div style="margin-top:40px;" class="alert alert-danger">
            <strong>Motherboards are not available.</strong>
        </div>
    }
</div>