@model List<Product>
<style>
        .product-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .product-item {
            padding: 10px;
            width: 390px;
            height: 500px;
            margin: 20px;
            text-align: center;
            box-shadow: 0px 0px 5px gray;
            transition: all 300ms ease-in-out;
        }

        .product-item img {
            width: 80%;
            height: auto;
        }

        .product-item h2 {
            font-size: 1.5rem;
            margin: 10px;
        }

        .product-item p {
            font-size: 1.2rem;
            margin: 10px;
        }

        .product-item:hover {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
            transform: scale(1.05);
        }

     .product-item button {
        display: none;
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        padding: 10px;
        color: #fff;
        border: none;
        border-radius: 15px;
    }

    .product-item:hover button {
        display: block;

    }
</style>


@if (Model.Count > 0)
{
<div class="bg-dark text-light py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a href="@Url.Action("GraphicsCard", "Shop")" class="text-light text-decoration-none">Graphics Cards</a>
                <a style="margin-left:25px;"  href="@Url.Action("Processor", "Shop")" class="text-light text-decoration-none">Processors</a>
                <a style="margin-left:25px;"  href="@Url.Action("RAM", "Shop")" class="text-light text-decoration-none">RAM</a>
                <a style="margin-left:25px;"  href="@Url.Action("Motherboard", "Shop")" class="text-light text-decoration-none">Motherboards</a>
            </div>
        </div>
    </div>
</div>



<div style="margin-top:20px;" class="product-list">
    @foreach (var product in Model)
    {
        <div class="product-item">
            <img src="@Url.Content(product.ImgUrl)" alt="@product.Name" />
            <h2 class="mt-3">@product.Name</h2>
            <p>Price: $@product.Price</p>
            <div class="text-center">
                <button class="btn btn-primary mt-3">Sepete Ekle</button>
            </div>
        </div>
    }
</div>


        }
else
{
    <div class="alert alert-danger">
        <strong>Products are not available.</strong>
    </div>
}