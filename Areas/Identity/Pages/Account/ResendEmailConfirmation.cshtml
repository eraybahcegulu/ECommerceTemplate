@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<link rel="stylesheet" href="~/css/resendemailconfirmation.css" />

<hr />
<div class="row">
    <div class="col">
        <form id="resendemail"  method="post">
            <h2>Enter your email.</h2>
            <hr />
            <br />
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button id="resendemailSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
