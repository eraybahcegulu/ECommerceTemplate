@model Product

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Remove Product</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Id" class="p-0"> </label>
			<input asp-for="Id" disabled class="form-control" />

		</div>

		<div class="mb-3">
			<label asp-for="Name" class="p-0"> </label>
			<input asp-for="Name" disabled class="form-control" />

		</div>

		<div class="mb-3">
			<label asp-for="Price" class="p-0"> </label>
			<input asp-for="Price" disabled class="form-control" />
		</div>

		<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Remove product</button>

		<a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
			Back to products
		</a>


	</div>

</form>