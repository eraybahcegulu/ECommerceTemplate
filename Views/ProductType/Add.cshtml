@model ProductType
@{
    ViewData["Title"] = "Product Types";
}
<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; margin-top: 50px;">
    <form method="post">
        <h2 style="color: #007BFF; text-align: center;">Add New Product Type</h2>
        <hr />

        <div class="mb-3">
            <label asp-for="Type" class="p-0"> </label>
            <input asp-for="Type" class="form-control" required minlength="2" pattern="[A-Za-zğüşıöçĞÜŞİÖÇ\s]+" title="En az 2 karakter uzunluğunda, sadece harf veya boşluk karakteri girebilirsiniz." />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>



        <button type="submit" style="width: 100%; margin-top: 10px;" class="btn btn-lg btn-primary">Add</button>

        <a asp-controller="ProductType" asp-action="Index" class="btn btn-lg btn-primary back-button" style="width: 100%; margin-top: 10px;">Back to Product Types</a>
    </form>
</div>
